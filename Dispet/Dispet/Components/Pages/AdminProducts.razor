@page "/admin-products"
@using Dispet.Models

<div class="container mt-5">
    <h2 class="text-center mb-4">Administrar Productos</h2>
    <table class="table table-bordered table-hover shadow-sm">
        <thead class="table-primary">
            <tr>
                <th>Producto</th>
                <th>Descripción</th>
                <th>Precio</th>
                <th>Acción</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in products)
            {
                <tr>
                    <td>@product.Name</td>
                    <td>@product.Description</td>
                    <td>$@product.Price</td>
                    <td>
                        <button class="btn btn-success btn-sm">Agregar al Carrito</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@code {
    private List<Product> products = new(); // Ejemplo de datos
}
