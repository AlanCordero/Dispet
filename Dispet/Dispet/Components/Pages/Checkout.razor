@page "/checkout"

<h2 class="mb-4">Finalizar Pedido</h2>

<EditForm Model="order" OnValidSubmit="ProcessOrder" class="border p-4 rounded shadow-sm bg-light">
    <div class="form-group">
        <label>Nombre Completo</label>
        <InputText @bind-Value="order.CustomerName" class="form-control" />
    </div>
    <div class="form-group">
        <label>Dirección</label>
        <InputText @bind-Value="order.Address" class="form-control" />
    </div>
    <div class="form-group">
        <label>Correo Electrónico</label>
        <InputText @bind-Value="order.Email" class="form-control" />
    </div>
    <div class="form-group">
        <label>Teléfono</label>
        <InputText @bind-Value="order.PhoneNumber" class="form-control" />
    </div>
    <button class="btn btn-success">Realizar Pedido</button>
</EditForm>
<button class="btn btn-primary" @onclick="ProcessPayment">Pagar con Stripe</button>

