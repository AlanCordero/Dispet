@page "/profile"

<h2 class="mb-4">Perfil de Usuario</h2>

<EditForm Model="userProfile" OnValidSubmit="UpdateProfile" class="border p-3 rounded shadow-sm bg-light">
    <div class="form-group">
        <label>Nombre de Usuario</label>
        <InputText @bind-Value="userProfile.Username" class="form-control" />
    </div>
    <div class="form-group">
        <label>Correo</label>
        <InputText @bind-Value="userProfile.Email" class="form-control" />
    </div>
    <div class="form-group">
        <label>Contraseña</label>
        <InputText @bind-Value="userProfile.Password" class="form-control" type="password" />
    </div>
    <button class="btn btn-primary">Guardar Cambios</button>
</EditForm>

@code {
    private UserProfile userProfile = new UserProfile { Username = "Usuario123", Email = "usuario@example.com" };

    private void UpdateProfile() { /* Lógica para actualizar el perfil */ }

    private class UserProfile
    {
        public string Username { get; set; }
        public string Email { get; set; }
        public string Password { get; set; }
    }
}
